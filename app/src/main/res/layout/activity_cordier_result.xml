<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results.Results">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_arrow"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/cordierite"
            android:layout_height="170dp"/>

        <TextView
            android:id="@+id/nameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="@string/cordierite"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_below="@id/imageView"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/properties"
            android:layout_below="@id/nameView"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:layout_marginStart="5dp"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/property"
            android:background="@color/hint_grey"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/colorShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/property"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/streakShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/streak"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/property"
            android:textColor="@android:color/black"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/lusterShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/luster"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/property"
            android:textColor="@android:color/black"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/hardnessShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hardness"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/property"
            android:textColor="@android:color/black"
            android:layout_marginTop="150dp"/>

        <TextView
            android:id="@+id/cleavageShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cleavage"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/property"
            android:textColor="@android:color/black"
            android:layout_marginTop="200dp"/>

        <TextView
            android:id="@+id/fractureShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fracture"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/property"
            android:textColor="@android:color/black"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/densityShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/densityone"
            android:textSize="20sp"
            android:layout_marginStart="5dp"
            android:layout_below="@id/property"
            android:textColor="@android:color/black"
            android:layout_marginTop="300dp"/>

        <TextView
            android:id="@+id/uses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uses"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@id/property"
            android:layout_marginStart="5dp"
            android:layout_marginTop="350dp"
            android:textColor="@android:color/black"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/uses"
            android:background="@color/hint_grey"
            android:layout_marginTop="4dp"/>

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/colorShow"
            android:layout_below="@id/property"
            android:layout_marginStart="140dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/colorAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brown"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/streakAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/white"
                android:textSize="20sp"
                android:layout_marginTop="40dp" />

            <TextView
                android:id="@+id/lusterAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vitreous"
                android:textSize="20sp"
                android:layout_marginTop="90dp" />

            <TextView
                android:id="@+id/hardnessAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seven"
                android:textSize="20sp"
                android:layout_marginTop="140dp" />

            <TextView
                android:id="@+id/cleavageAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/indistinct"
                android:textSize="20sp"
                android:layout_marginTop="190dp" />

            <TextView
                android:id="@+id/fractureAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subConchoidal"
                android:textSize="20sp"
                android:layout_marginTop="240dp" />

            <TextView
                android:id="@+id/densityAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twopointfive"
                android:textSize="20sp"
                android:layout_marginTop="290dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/useText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cordieriteUse"
            android:layout_below="@id/uses"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/locations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:layout_below="@id/useText"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:layout_marginStart="5dp"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/locations"
            android:background="@color/hint_grey"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cordieriteLocale"
            android:layout_below="@id/locations"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"/>
    </RelativeLayout>
</ScrollView>